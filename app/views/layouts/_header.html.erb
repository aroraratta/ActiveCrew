<header>
  <div class="container-fluid">
    <div class="row header-custom py-3">
      <%= link_to top_path, class: "mx-auto h-100" do %>
        <%= image_tag "logo_white.png", class: "h-100" %>
      <% end %>

      <div id="hm-icon">
        <a class="menu-trigger" href="#">
          <span></span>
          <span></span>
          <span></span>
        </a>
      </div>
    </div>

    <div id="sp-menu">
      <ul>
        <% if admin_signed_in? %>
          <p><strong>管理者ログイン中。</strong></p>
          <%= link_to admin_circles_path do %><li class="header-content"><i class="fa-solid fa-people-group"></i>サークル一覧</li><% end %>
          <%= link_to admin_users_path do %><li class="header-content">会員一覧</li><% end %>
          <%= link_to admin_posts_path do %><li class="header-content">投稿一覧</li><% end %>
          <%= link_to top_path do %><li class="header-content">検索</li><% end %>
          <%= link_to destroy_admin_session_path, method: :delete do %><li class="header-content">ログアウト</li><% end %>
        <% elsif user_signed_in? %>
          <p><strong>ログイン中です。<%= current_user.name %>さん</strong></p>
          <%= link_to root_path do %><li class="header-content">サイト概要</li><% end %>
          <%= link_to mypage_path do %><li class="header-content">マイページ</li><% end %>
          <%= link_to top_path do %><li class="header-content">検索</li><% end %>
          <%= link_to destroy_user_session_path, method: :delete do %><li class="header-content">ログアウト</li><% end %>
        <% else %>
          <p><strong>ログインしてください。</strong></p>
          <%= link_to root_path do %><li class="header-content">サイト概要</li><% end %>
          <%= link_to top_path do %><li class="header-content">検索</li><% end %>
          <%= link_to new_user_registration_path do %><li class="header-content">新規登録</li><% end %>
          <%= link_to new_user_session_path do %><li class="header-content">ログイン</li><% end %>
        <% end %>
      </ul>
    </div>
  </div>
</header>

