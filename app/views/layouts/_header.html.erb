<header>
  <div class="container-fluid">
    <div class="row header-custom py-3">
      <%= link_to top_path, class: "mx-auto h-100" do %>
        <%= image_tag "logo_white.png", class: "h-100" %>
      <% end %>

      <div id="hm-icon">
        <a class="menu-trigger" href="#">
          <span></span>
          <span></span>
          <span></span>
        </a>
      </div>
    </div>

    <div id="sp-menu">
      <ul>
        <% if admin_signed_in? %>
          <li><%= link_to "サークル一覧", class: "header-content" %></li>
          <li><%= link_to "会員一覧", class: "header-content" %></li>
          <li><%= link_to "投稿一覧", class: "header-content" %></li>
          <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "header-content" %></li>
