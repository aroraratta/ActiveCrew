<div class="container">
  <div class="row my-5">
    <div class="col-auto text-center">
      <h3 class="page-title my-auto">サークル詳細</h3>
    </div>
    <div class="col-3 offset-4 text-right my-auto">
      <button class="btn-custom-blue edit-btn">編集</button>
    </div>
    <div class="col-2 ml-auto text-right my-auto">
      <%= link_to "削除", admin_circle_path(@circle), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-custom-red" %>
    </div>
  </div>
  
  <div id="js-circle-edit">
    <%= render "public/circles/circle_edit", circle: @circle, prefectures: @prefectures, owner_route: admin_user_path(@circle.owner) %>
  </div>

  <div class="row my-5 bg-gray">
    <div class="col">
      <div class="row my-3">
        <div class="col text-center">
          <p class="font-weight-bold">このサークルに関する投稿一覧</P>
        </div>
      </div>

      <% @circle_posts.each do |post| %>
        <div class="row py-3 my-3 post-background">
          <%= render "public/posts/index", obj: post, user_route: admin_user_path(post.user), post_route: admin_post_path(post), content: post.body, circle: post.circle, circle_route: admin_circle_path(post.circle) %>
          <div class="col-1 my-auto text-center">
            <i class="fa-regular fa-comment small-icon"></i>
            <%= post.post_comments.count %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

</div>