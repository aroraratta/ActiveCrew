<%= form_with url: searches_path, method: :get do |f| %>
  <%= f.text_field :word %>
  <%= f.select :range, options_for_select([["ユーザー", "user"], ["投稿", "post"]]) %>
  <%= f.select :search, options_for_select([["完全一致", "perfect_match"], ["前方一致", "forward_match"], ["部分一致", "partial_match"]]) %>
  <%= f.submit "検索", class: "btn" %>
<% end %>