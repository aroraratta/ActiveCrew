<div class="container">
  <div class="row my-5">
    <div class="col text-center">
      <h3 class="page-title my-auto">プロフィール編集</h3>
    </div>
    <div class="col ml-auto text-right my-auto">
      <%= link_to "退会", unsubscribe_path, class: "btn-custom-red" %>
    </div>
  </div>

  <%= form_with model: @user, url: update_information_path, method: :patch do |f| %>
    <div class="row">
      <div class="col-4 my-auto">
        <div class="square">
          <%= f.label :user_image, class: "image-label", for: "image_input" do %>
            <%= image_tag (@user.user_image.attached? ? @user.user_image : "no_image.png"), id: "img_prev", class: "image-fluid" %>
          <% end %>
          <%= f.file_field :user_image, accept: "image/*", id: "image_input", class: "image_select" %>
        </div>
      </div>
      <div class="col-8 my-auto">
        <div class="row my-3">
          <div class="col">
            <div class="blue-border">
              <div class="row text-center">
                <div class="col-3 my-auto"><%= f.label :email, "メールアドレス", class: "text-blue" %></div>
                <div class="col-9 my-auto"><%= f.text_field :email, placeholder: "example@gmail.com", class: "custom-form" %></div>
              </div>
            </div>
          </div>
        </div>
        <div class="row my-3">
          <div class="col">
            <div class="blue-border">
              <div class="row text-center">
                <div class="col-3 my-auto"><%= f.label :name, "ユーザー名", class: "text-blue" %></div>
                <div class="col-9 my-auto"><%= f.text_field :name, placeholder: "サンプル太郎", class: "custom-form" %></div>
              </div>
            </div>
          </div>
        </div>
        <div class="row my-3">
          <div class="col">
            <div class="blue-border">
              <div class="row text-center">
                <div class="col-3 my-auto"><%= f.label :introduction, "紹介文", class: "text-blue" %></div>
                <div class="col-9 my-auto"><%= f.text_area :introduction, placeholder: "紹介文を記入してください", class: "custom-form", rows: 5 %></div>
              </div>
            </div>
          </div>
        </div>
        <div class="row my-3">
          <div class="col text-center">
            <%= f.submit "保存", class: "btn-custom-blue" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>