<%= form_with model: circle, url: route, local: async do |f| %>
  <div class="row">
    <div class="col-3 my-auto">
        <%= f.label :circle_image, class: "image-label circle", for: "image_input" do %>
          <%= image_tag (@circle.circle_image.attached? ? @circle.circle_image : "no_image.png"), id: "img_prev", class: "image-fluid" %>
        <% end %>
        <%= f.file_field :circle_image, accept: "image/*", id: "image_input", class: "image_select" %>
    </div>
    <div class="col-9">
      <div class="blue-border">
        <div class="row my-3">
          <%= render "layouts/errors", obj: circle %>
        </div>
        <div class="row my-3 user-introduction">
          <div class="col-3 text-center my-auto">
            <%= f.label :circle_name, "サークルの名前", class: "font-weight-bold text-blue" %>
          </div>
          <div class="col-9 text-blue">
            <%= f.text_field :circle_name, placeholder: "例)バドミントンサークル", class: "custom-form" %>
          </div>
        </div>
        <div class="row my-3 user-introduction">
          <div class="col-3 text-center my-auto">
            <%= f.label :circle_introduction, "サークルの紹介", class: "font-weight-bold text-blue" %>
          </div>
          <div class="col-9 text-blue">
            <%= f.text_area :circle_introduction, placeholder: "例)こんにちわバドミントンサークルです!毎週土日に練習があります。主に練馬区の○○体育館で活動しています。絶賛参加募集中です。", rows: 5, class: "custom-form" %>
          </div>
        </div>
        <div class="row my-3 user-introduction">
          <div class="col-3 text-center my-auto">
            <%= f.label :prefecture_id, "活動場所", class: "font-weight-bold text-blue" %>
          </div>
          <div class="col text-blue">
            <%= f.collection_select :prefecture_id, prefectures, :id, :prefecture_name, { prompt: "県を選択" }, { id: "circle_prefecture_id", class: "custom-form" } %>
          </div>
          <div class="col text-blue">
            <%= f.collection_select :city_id, [], :id, :city_name, { prompt: "市を選択" }, { id: "circle_city_id", class: "custom-form" } %>
          </div>
        </div>
        <div class="row my-3 user-introduction">
          <div class="col-3 text-center mx-auto">
            <%= f.submit submit_text, class: "btn-custom-blue" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
