<div class="fit-blue-border">
  <div class="row my-2">
    <div class="col">
      <%= form_with model: circle, url: route do |f| %>
        <div class="row text-center my-5">
          <div class="col-3 my-auto"><%= f.label :circle_image, "サークルのアイコン", class: "font-weight-bold text-blue" %></div>
          <div class="col-3 my-auto mx-auto">
            <%= f.label :circle_image, class: "image-label circle", for: "image_input" do %>
              <%= image_tag (@circle.circle_image.attached? ? @circle.circle_image : "no_image.png"), id: "img_prev", class: "image-fluid" %>
            <% end %>
            <%= f.file_field :circle_image, accept: "image/*", id: "image_input", class: "image_select" %>
          </div>
        </div>

        <div class="row text-center my-5">
          <div class="col-3 my-auto"><%= f.label :circle_name, "サークルの名前", class: "font-weight-bold text-blue" %></div>
          <div class="col-9 my-auto"><%= f.text_field :circle_name, placeholder: "例)バドミントンサークル", class: "custom-form" %></div>
        </div>

        <div class="row text-center my-5">
          <div class="col-3 my-auto"><%= f.label :circle_introduction, "サークルの紹介", class: "font-weight-bold text-blue" %></div>
          <div class="col-9 my-auto"><%= f.text_area :circle_introduction, placeholder: "例)こんにちわバドミントンサークルです!毎週土日に練習があります。主に練馬区の○○体育館で活動しています。絶賛参加募集中です。", rows: 5, class: "custom-form" %></div>
        </div>

        <div class="row text-center my-5">
          <div class="col-3 my-auto"><%= f.label :prefecture_id, "活動場所", class: "font-weight-bold text-blue" %></div>
          <div class="col my-auto prefecture-area">
            <%= f.collection_select :prefecture_id, prefectures, :id, :prefecture_name, { prompt: "県を選択" }, { id: "circle_prefecture_id", class: "custom-form" } %>
          </div>
          <div class="col my-auto city-area">
            <%= f.collection_select :city_id, [], :id, :city_name, { prompt: "市を選択" }, { id: "circle_city_id", class: "custom-form" } %>
          </div>
        </div>
        
        <div class="row text-center my-5">
          <div class="col-3 my-auto"></div>
          <div class="col-9 my-auto"><%= f.submit submit_text, class: "btn-custom-blue" %></div>
        </div>

      <% end %>
    </div>
  </div>
</div>