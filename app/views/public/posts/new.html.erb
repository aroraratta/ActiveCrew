  <div class="row my-5">
    <div class="col-auto text-center">
      <h3 class="page-title my-auto">新規投稿</h3>
    </div>
    <div class="col-auto text-center">
      <%= link_to "戻る", request.referer || root_path, class: "btn-custom-red" %>
    </div>
  </div>
  
  <div class="row ml-3">
    <%= render "layouts/errors", obj: @post %>
  </div>

  <%= render "form", post: @post, submit_text: "投稿", route: posts_path, circles: @circles  %>
  
</div>