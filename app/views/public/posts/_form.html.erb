<%= form_with model: post, url: route do |f| %>
  <div class="col-3">
    <div class="image_field">
      <p>画像プレビュー</p>
      <div class="square">
  <%= f.label :post_image, class: "image-label", for: "image_input" do %>
    <%= image_tag post.post_image.attached? ? post.post_image : "no_image.png", id: "img_prev", class: "img-fluid" %>
  <% end %>
  <%= f.file_field :post_image, accept: "image/*", id: "image_input", class: "image_select" %>
</div>
    </div>
  </div>
  <%= f.label :body, "投稿内容" %>
  <%= f.text_area :body %>

  <%= f.submit submit_text, class: "btn btn-primary" %>
<% end %>