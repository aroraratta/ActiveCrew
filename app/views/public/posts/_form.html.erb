<div class="fit-blue-border">
  <div class="row my-2">
    <div class="col">
      <%= form_with model: post, url: route do |f| %>
        <div class="row">
          <div class="col">
            <div class="row text-center my-5">
              <div class="col-3 my-auto"><%= f.label :post_image, "投稿画像", class: "font-weight-bold text-blue" %></div>
              <div class="col-3 my-auto mx-auto">
                <%= f.label :post_image, class: "image-label square", for: "image_input" do %>
                  <%= image_tag (post.post_image.attached? ? post.post_image : "no_image.png"), id: "img_prev", class: "image-fluid" %>
                <% end %>
                <%= f.file_field :post_image, accept: "image/*", id: "image_input", class: "image_select" %>
              </div>
            </div>
            <div class="row">
              <div class="col-3 my-auto text-center"><%= f.label :body, "投稿内容", class: "font-weight-bold text-blue" %></div>
              <div class="col-9 my-auto"><%= f.text_area :body, placeholder: "入力してください", class: "custom-form", rows: 5 %></div>
            </div>
          </div>
        </div>
        <div class="row text-center my-5">
          <div class="col-3 my-auto"><%= f.label :circle_id, "活動サークル", class: "font-weight-bold text-blue" %></div>
          <div class="col-9 my-auto"><%= f.collection_select :circle_id, circles, :id, :circle_name, { prompt: "サークルを選択" }, { class: "custom-form" } %></div>
        </div>
        <div class="row mx-auto mt-5">
          <div class="col-6">
            <%= f.submit submit_text, class: "btn-custom-blue" %>
          </div>
          <div class="col-6">
            <button type="button" class="btn-custom-red cancel-edit">戻る</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>