<div class="container">
  <div class="row my-5">
    <div class="col-auto text-center">
      <h3 class="page-title my-auto"><%= page_title %></h3>
    </div>
  </div>

  <div class="fit-blue-border">
    <div class="row my-5">
      <div class="col">
        <%= form_with model: post, url: route do |f| %>
          <div class="row">
            <div class="col-10 my-auto text-center">
              <%= f.text_area :body, placeholder: "入力してください", class: "custom-form", rows: 5 %>
            </div>
            <div class="col-2">
              <div class="square">
                <%= f.label :post_image, class: "image-label", for: "image_input" do %>
                  <%= image_tag (@post.post_image.attached? ? @post.post_image : "no_image.png"), id: "img_prev", class: "image-fluid" %>
                <% end %>
                <%= f.file_field :post_image, accept: "image/*", id: "image_input", class: "image_select" %>
              </div>
            </div>
          <div class="row mx-auto mt-5">
            <%= f.submit submit_text, class: "btn-custom-blue" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>