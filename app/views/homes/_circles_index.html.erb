<div class="col-1 my-auto">
  <i class="fa-solid fa-crown <%= "crown-#{index + 1}" %>"></i>
</div>

<div class="col-2">
  <div class="circle">
    <%= display_circle_image(circle) %>
  </div>
</div>

<div class="col-9 my-auto">
  <div class="row my-3 bg-light">
    <div class="col-3 text-center">
      <p class="m-0 text-blue font-weight-bold">サークル名</p>
    </div>
    <div class="col">
      <p class="m-0 text-blue">:<%= circle.circle_name %></p>
    </div>
  </div>
  <div class="row my-3 bg-light">
    <div class="col-3 text-center">
      <p class="m-0 text-blue font-weight-bold">サークルの紹介</p>
    </div>
    <div class="col">
      <p class="m-0 text-blue">:<%= circle.circle_introduction %></p>
    </div>
  </div>
  <div class="row my-3 bg-light">
    <div class="col-3 text-center">
      <p class="m-0 text-blue font-weight-bold">サークル参加者数</p>
    </div>
    <div class="col">
      <p class="m-0 text-blue">:<%= circle.user_count %>人</p>
    </div>
  </div>
  <div class="row my-3 bg-light">
    <div class="col-3 text-center">
      <p class="m-0 text-blue font-weight-bold">サークルに関する投稿</p>
    </div>
    <div class="col">
      <p class="m-0 text-blue">:<%= circle.post_count %>件</p>
    </div>
  </div>
  <div class="row my-3 bg-light">
    <div class="col-3 text-center">
      <p class="m-0 text-blue font-weight-bold">管理者</p>
    </div>
    <div class="col">
      <p class="m-0 text-blue">:<%= circle.post_count %></p>
    </div>
  </div>
</div>